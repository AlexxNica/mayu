[Unit]
Description=Mayu
After=docker.service
Requires=docker.service

[Service]
Restart=always
TimeoutStartSec=0
ExecStart=/usr/bin/docker run --rm --cap-add=NET_ADMIN --net=host \
        -v /opt/giantswarm/mayu/config.yaml:/opt/mayu/config/config.yaml \
        -v /opt/giantswarm/mayu/bin-dist/cluster:/opt/mayu/cluster \
        giantswarm/mayu -v=12 -no-git

[Install]
WantedBy=multi-user.target
